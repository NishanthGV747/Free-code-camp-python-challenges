def evaluate(nums, ops):
    if not nums:
        return 0
    
    result = nums[0]
    op_count = len(ops)
    
    for i in range(1, len(nums)):
        op = ops[(i-1) % op_count]
        num = nums[i]
        
        if op == '+':
            result += num
        elif op == '-':
            result -= num
        elif op == '*':
            result *= num
        elif op == '/':
            result = int(result / num)  
        elif op == '%':
            result %= num
        else:
            raise ValueError("Invalid operator: " + op)
    
    return result
